<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/review_vertical_margin"
    android:paddingLeft="@dimen/review_horizontal_margin"
    android:paddingRight="@dimen/review_horizontal_margin"
    android:paddingTop="@dimen/review_vertical_margin">

    <TextView
        android:id="@+id/tv_review_author"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/review_author_margin"
        android:textColor="@color/colorFont"
        android:textStyle="bold"
        tools:text="Kelly" />

    <TextView
        android:id="@+id/tv_review_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="3"
        tools:text="This is good" />

</LinearLayout>