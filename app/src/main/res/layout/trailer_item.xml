<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/video_vertical_margin"
    android:layout_marginLeft="@dimen/video_horizontal_margin"
    android:layout_marginStart="@dimen/video_horizontal_margin"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_detail_trailer"
        android:layout_width="@dimen/trailer_width"
        android:layout_height="@dimen/trailer_height"
        tools:background="@android:color/black" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/label_horizontal_margin"
        android:layout_marginStart="@dimen/label_horizontal_margin"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_video_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="3"
            android:textColor="@color/colorFont"
            android:textSize="14sp"
            tools:text="Official trailer" />

        <TextView
            android:id="@+id/tv_video_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/label_vertical_margin"
            android:textSize="12sp"
            tools:text="trailer" />
    </LinearLayout>

    <ImageView
        android:id="@+id/share_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/share_icon_padding_vertical"
        android:paddingBottom="@dimen/share_icon_padding_vertical"
        android:paddingLeft="@dimen/share_icon_padding_horizontal"
        android:paddingStart="@dimen/share_icon_padding_horizontal"
        android:paddingTop="@dimen/share_icon_padding_vertical"
        android:src="@drawable/ic_more_vert_black_24dp"
        android:tint="@color/colorAccent" />

</LinearLayout>